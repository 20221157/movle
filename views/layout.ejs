@import url(https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700);
@import 'https://fonts.googleapis.com/css?family=Montserrat:400,700';

body {
  margin: 0;
  color: #ffbcf8;
  font-family: 'Open Sans',Arial,sans-serif;
  font-size: 15px;
}
h1,h2,h3,h4,h5{
    font-family: 'Montserrat', sans-serif;
}
header{width:100%; min-width: 100px;}
.navbar {border: medium none; float:left; margin-bottom: 0px; width: 100%;  border-radius: 0}
.top-head{background: #fedbf4; width: 100%; float:left; height: 68px;}
.top-head h1 {color: #fff; font-size: 40px; font-weight: 600; margin-top: 25px; margin-left: 4%;}


.top-nav{background: #fedbf4; padding: 10px; height: 60px; width: 100%;}
.top-nav .nav-link {padding-bottom: 0.7rem; padding-top: 0.7rem; }
.top-nav .navbar-nav .nav-item + .nav-item{margin-left:3px;}
.navbar-nav{width: 850px; display:block; overflow:visible;}
.top-nav li {display:inline;}
.top-nav li a{color: #ffffff; text-transform: uppercase; font-size: 14px; font-weight: 700; padding:0 50px; border-bottom: 2px solid #fff; text-decoration-line: none; }
.top-nav li a:hover, .top-nav li a:focus, .top-nav li.active a{color: #ff00c3; border-bottom: 2px solid  #ff00c3 }
.top-nav .form-control{border-color: #fff}
.top-nav .nav-inline .nav-link{color:white; text-decoration-line: none; float: left; margin-left: 91%; font-weight: 600; }
.top-nav .profile {color: white; position: absolute; top: 20px; right: 20px; display: block; border:1px solid black; width: 40px; height: 40px;}
.top-nav .material-symbols-outlined{font-variation-settings:
  'FILL' 0,
  'wght' 400,
  'GRAD' 0,
  'opsz' 24;
  font-size: 38px;
  
}


.search-box {
  height: 23px;
  width: 250px;
  background:white;
  border-radius: 40px;
  padding: 8px;
  float: right;
  margin-right: 40px;
  position: fixed;
  top: 90px;
  right: 0;
}
.search-txt {
  border: none;
  background: none;
  outline: none;
  float: left;
  padding: 0;
  color: #797979;
  font-size: 16px;
  line-height: 30px;
  width: 200px;
  
}
@media(max-width:1100px){
  .search-btn{
    display: none;
  }
  .search-txt{
    display: none;
  }
  .search-box{
    display: none;
  }
}
.search-btn {
  color: #f9deec;
  float: right;
  width: 40px;
  height: 100%;
  border-radius: 50%;
  background: white;
  border: none;
font-size: 16px;
justify-content: center;
align-items: center;
}

#search {float: right; margin-top: 9px; width: 250px;}
.search {padding: 3px 0; width: 230px; height: 30px; position: relative; left: 10px; float: left; line-height: 22px;}

.search:hover input, .search input:focus { width: 200px; margin-left: 0px; background: #ffffff;}
.top-nav .btn {position: absolute;right: 0;top: 4px;border-radius:3px;}
