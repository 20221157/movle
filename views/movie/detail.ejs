<div class="movie-detail">
  <h2><%= movie.title %></h2>
  <img src="/images/movies/<%= movie.imagePath %>" alt="<%= movie.title %>">
  <p><%= movie.plot %></p>
  
  <h3>감독</h3>
  <ul>
    <% movie.directors.forEach(director => { %>
      <li><%= director.name %></li>
    <% }); %>
  </ul>
  
  <h3>배우</h3>
  <ul>
    <% movie.actors.forEach(actor => { %>
      <li><%= actor.name %></li>
    <% }); %>
  </ul>
</div>
